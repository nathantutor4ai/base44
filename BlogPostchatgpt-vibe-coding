# ChatGPT's suggested improvements:
# 1. Add type hints
# 2. Use dataclass for better structure
# 3. Add validation methods

from dataclasses import dataclass
from typing import List

@dataclass
class AIAssistant:
    name: str
    skills: List[str]
    mood: str = 'helpful'
    
    def add_skill(self, skill: str) -> None:
        if skill not in self.skills:
            self.skills.append(skill)
    
    def get_capabilities(self) -> str:
        return f"{self.name} can help with: {', '.join(self.skills)}"`;

